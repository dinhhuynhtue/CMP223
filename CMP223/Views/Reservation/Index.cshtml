
@{
    ViewBag.Title = "Reservation";
    Layout = "~/Views/Shared/NEWWORLD_Layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Booking Form HTML Template</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=PT+Sans:400" rel="stylesheet">

    <!-- Bootstrap -->
    @*<link type="text/css" rel="stylesheet" href="~/Assets/Client/booking/bootstrap.min.css" />*@

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Assets/Client/booking/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

</head>
<body>
    <header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url('../../Assets/Client/images/restaurant.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="gtco-container text-center">

            <div class="row">
                <div class="col-md-12 col-md-offset-0 table-center">
                    <div class="row row-mt-8em" style="margin-top:8em">
                        <div class="form-wrap">
                            <div class="booking-form">
                                <form>
                                    <div class="form-group">
                                        <div class="form-checkbox">
                                            <label for="roundtrip">
                                                <input type="radio" id="roundtrip" name="flight-type">
                                                <span></span>Roundtrip
                                            </label>
                                            <label for="one-way">
                                                <input type="radio" id="one-way" name="flight-type">
                                                <span></span>One way
                                            </label>
                                            <label for="multi-city">
                                                <input type="radio" id="multi-city" name="flight-type">
                                                <span></span>Multi-City
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="activities">FullName</label>
                                                <input class="form-control" type="text" placeholder="YOUR FULL NAME" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="activities">E-Mail</label>
                                                <input class="form-control" type="text" placeholder="YOUR E-MAIL" >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="date-start">Date</label>
                                                <input class="form-control" type="text" id="date" required>
                        
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="time-start">Time</label>
                                                <input class="form-control" type="text" id="time" required>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="activities">Phone</label>
                                                <input class="form-control" type="text" name="Phone" data-ng-form="Phone" placeholder="Your Phone" required/>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="activities">Dishes</label>
                                                <select class="form-control">
                                                    <option>0</option>
                                                    <option>1</option>
                                                    <option>2</option>
                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="activities">Table</label>
                                                <select class="form-control">
                                                    <option>Tb</option>
                                                    <option>Tb</option>
                                                    <option>Tb</option>
                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="activities">Persons</label>
                                                <select class="form-control">
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-btn">
                                                <button class="submit-btn">Reservation</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        
                    </div>
                </div>
                
            </div>
        </div>

    </header>



  

</body>


</html>

